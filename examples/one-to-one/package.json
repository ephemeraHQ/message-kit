{
  "name": "one-to-one",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w & sleep 1 && nodemon dist/index.js",
    "dev:bun": "tsc -w & bun run --watch dist/index.js",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@redis/client": "^1.5.16",
    "@xmtp/content-type-text": "^1.0.0",
    "@xmtp/message-kit": "workspace:*",
    "@xmtp/redis-persistence": "^0.0.4",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.1.3",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20"
  }
}
